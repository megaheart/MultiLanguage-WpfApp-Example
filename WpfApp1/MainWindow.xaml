<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:l="clr-namespace:WpfApp1.Languages"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel Margin="50">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Padding="5" Margin="5" Click="Button_Click">en-US</Button>
                <Button Padding="5" Margin="5" Click="Button_Click_1">vi-VN</Button>
                <Button Padding="5" Margin="5" Click="Button_Click_2">ja-JP</Button>
            </StackPanel>
            <TextBlock Margin="5" FontSize="16" Text="{x:Static l:Lang.XXX}"></TextBlock>
            <Calendar Margin="5"></Calendar>
        </StackPanel>
    </Grid>
</Window>
